{
  "window.commandCenter": true,
  "window.zoomLevel": 0.6,
  "editor.fontSize": 14,
  "editor.codeActionsOnSave": {},
  "editor.stickyScroll.enabled": true,
  "vim.easymotion": true,
  "vim.useSystemClipboard": true,
  "vim.leader": ",",
  "vim.foldfix": true,
  "vim.normalModeKeyBindingsNonRecursive": [
    {
      "before": ["leader", "n"],
      "commands": ["workbench.action.toggleSidebarVisibility"],
      "when": "sideBarVisible == true"
    },
    {
      "before": ["leader", "n"],
      "commands": ["workbench.view.explorer"],
      "when": "sideBarVisible == false"
    },
    {
      "before": ["leader", "c", "i"],
      "commands": ["editor.action.commentLine"]
    }
  ],
  "git.openRepositoryInParentFolders": "always",
  "typescript.implementationsCodeLens.enabled": true,
  "typescript.implementationsCodeLens.showOnInterfaceMethods": true,
  "debug.console.fontSize": 14,
  "terminal.integrated.fontSize": 14,
  "chat.editor.fontSize": 15,
  "workbench.tree.stickyScrollMaxItemCount": 5,
  "editor.stickyScroll.defaultModel": "foldingProviderModel",
  "scm.inputFontSize": 14,
  "workbench.colorCustomizations": {
    "editorStickyScroll.background": "#504646" // Change to your desired color code
  },
  "[jsonc]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[typescript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "editor.formatOnSave": true,
  "emeraldwalk.runonsave": {
    "commands": [
      {
        "match": "\\.go$",
        "cmd": "golines ${file} -m 150 -w"
      }
    ]
  },
  "playwright.reuseBrowser": false,
  "playwright.env": {
    "TEST_AUTH0_USERNAME": "",
    "TEST_AUTH0_PASSWORD": ""
  },
  "playwright.showTrace": false,
  "[typescriptreact]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "cursor.cpp.enablePartialAccepts": true,
  "[javascriptreact]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "svelte.enable-ts-plugin": true,
  "git.autofetch": true,
  "[json]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "go.toolsManagement.autoUpdate": true
}
